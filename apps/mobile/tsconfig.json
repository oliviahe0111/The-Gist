{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "jsx": "react-native",
    "paths": {
      "@the-gist/shared": ["../../packages/shared/src"],
      "@the-gist/ui": ["../../packages/ui/src"],
      "@the-gist/assets": ["../../packages/assets/src"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "types/**/*.d.ts"
  ]
}
